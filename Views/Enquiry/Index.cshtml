@model IEnumerable<WeddingApp.Models.Enquiry>
@using WeddingApp.Models

@{
	ViewBag.Title = "Index";
}

<h3>Manage Enquiries</h3>
<br />
<p>
	@Html.Partial("_CreateButtonPartial")
</p>

<table class="table table-condensed table-hover">
	<tr class="table-header">
		<th>
			@Html.DisplayNameFor(model => model.EnquiryCategory.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Message)
		</th>
		<th></th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.EnquiryCategory.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Message)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
				@Html.ActionLink("Details", "Details", new { id = item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.Id })
			</td>
		</tr>
	}

</table>

