@model IEnumerable<WeddingApp.Models.WeddingDetails>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.Partial("_CreateButtonPartial")
<br />
<br />

<table class="table table-condensed table-hover">
    <tr class="table-header">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WeddingPackage.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfGuest)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WeddingPackage.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfGuest)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
